{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-extension",
				"--disable-extensions",
        "${workspaceFolder}/packages/vscode-extension/test"
			],
			"outFiles": [
				"${workspaceFolder}/packages/vscode-extension/dist/**/*.js"
			],
			"preLaunchTask": "${defaultBuildTask}"
		} 
	]
}