{
  "name": "ttl-helpers-extension",
  "displayName": "TTL Helpers",
  "publisher": "alexgagnon",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexgagnon/ttl-helpers/packages/extension"
  },
  "engines": {
    "vscode": "^1.101.0"
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "contributes": {
    "configuration": [
      {
        "id": "ttl-helpers",
        "title": "TTL Helpers",
        "properties": {}
      }
    ],
    "grammars": [
      {
        "injectTo": [
          "source.js",
          "source.js.jsx",
          "source.jsx",
          "source.ts",
          "source.tsx",
          "text.html.basic"
        ],
        "scopeName": "inline.lit-html",
        "path": "./syntaxes/lit-html.json",
        "embeddedLanguages": {
          "meta.embedded.block.html": "html",
          "meta.embedded.block.css": "css",
          "source.css": "css"
        }
      },
      {
        "injectTo": [
          "source.js",
          "source.js.jsx",
          "source.jsx",
          "source.ts",
          "source.tsx",
          "text.html.basic"
        ],
        "scopeName": "inline.lit-html.string.injection",
        "path": "./syntaxes/lit-html-string-injection.json",
        "embeddedLanguages": {
          "meta.template.expression.ts": "typescript"
        }
      },
      {
        "injectTo": [
          "source.js",
          "source.js.jsx",
          "source.jsx",
          "source.ts",
          "source.tsx",
          "text.html.basic"
        ],
        "scopeName": "inline.lit-html.style.injection",
        "path": "./syntaxes/lit-html-style-injection.json",
        "embeddedLanguages": {
          "meta.template.expression.ts": "typescript"
        }
      },
      {
        "injectTo": [
          "source.js",
          "source.js.jsx",
          "source.jsx",
          "source.ts",
          "source.tsx",
          "text.html.basic"
        ],
        "scopeName": "inline.lit-html-svg",
        "path": "./syntaxes/lit-html-svg.json",
        "embeddedLanguages": {
          "meta.embedded.block.svg": "xml"
        }
      }
    ],
    "typescriptServerPlugins": [
      {
        "name": "typescript-plugin",
        "enableForWorkspaceTypeScriptVersions": true
      }
    ]
  },
  "keywords": [
    "syntax-highlighting",
    "vscode-extension",
    "css",
    "html",
    "svg"
  ],
  "author": "",
  "license": "ISC",
  "description": "Provides syntax highlighting for tagged template literals from the `ttl-helpers` library.",
  "devDependencies": {
    "@types/node": "^24.0.14",
    "@types/vscode": "^1.102.0",
    "ttl-helpers": "file:../lib",
    "typescript": "^5.8.3",
    "typescript-template-language-service-decorator": "^2.3.2",
    "vscode-css-languageservice": "^6.3.7",
    "vscode-html-languageservice": "^5.5.1",
    "vscode-languageserver-types": "^3.17.5"
  }
}
