{
  "name": "@ttl-helpers/extension",
  "displayName": "TTL Helpers",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.101.0"
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "contributes": {
    "commands": [
      {
        "command": "first-extension.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "source.css.ttl-helpers",
        "aliases": [
          "CSS TTL Helpers",
          "css.ttl-helpers"
        ],
        "configuration": "./syntaxes/css.json"
      }
    ],
    "grammars": [
      {
        "language": "source.css.ttl-helpers",
        "scopeName": "source.css.ttl-helpers",
        "path": "./syntaxes/css.json"
      },
      {
        "injectTo": [
          "source.ts",
          "source.js",
          "source.tsx",
          "source.jsx"
        ],
        "scopeName": "source.css.ttl-helpers.injection",
        "path": "./syntaxes/css-ttl.json"
      }
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "ttl-helpers": "file:../lib",
    "typescript": "^5.8.3"
  }
}
