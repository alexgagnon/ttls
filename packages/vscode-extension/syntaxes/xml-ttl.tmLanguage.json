{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "XML TTL",
  "scopeName": "source.xml.ttl",
  "injectionSelector": "L:source.js, L:source.ts, L:source.jsx, L:source.tsx",
  "patterns": [
    {
      "name": "meta.tagged-template.xml.ttl",
      "begin": "(?<!\\w)(xml)\\s*`",
      "beginCaptures": {
        "1": {
          "name": "support.function.tagged-template.xml.ttl"
        },
        "0": {
          "name": "punctuation.definition.template-expression.begin.xml.ttl"
        }
      },
      "end": "`",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.template-expression.end.xml.ttl"
        }
      },
      "patterns": [
        {
          "include": "source.js#template-substitution-element"
        },
        {
          "include": "text.xml"
        }
      ]
    },
    {
      "include": "source.js#template-substitution-element"
    }
  ]
}
