{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "TTL Embedded",
  "scopeName": "source.ttl.embedded",
  "injectionSelector": "L:meta.template.expression.ts, L:meta.template.expression.js",
  "patterns": [
    {
      "name": "meta.embedded.line.css.ttl",
      "begin": "\\b(css)\\s*`",
      "beginCaptures": {
        "1": {
          "name": "support.function.tagged-template.css.ttl"
        }
      },
      "end": "`",
      "patterns": [
        {
          "include": "source.js#template-substitution-element"
        },
        {
          "include": "#nested-css"
        },
        {
          "include": "source.css"
        }
      ]
    },
    {
      "name": "meta.embedded.line.html.ttl",
      "begin": "\\b(html)\\s*`",
      "beginCaptures": {
        "1": {
          "name": "support.function.tagged-template.html.ttl"
        }
      },
      "end": "`",
      "patterns": [
        {
          "include": "source.js#template-substitution-element"
        },
        {
          "include": "#nested-css"
        },
        {
          "include": "#nested-xml"
        },
        {
          "include": "text.html.derivative"
        }
      ]
    },
    {
      "name": "meta.embedded.line.xml.ttl",
      "begin": "\\b(xml)\\s*`",
      "beginCaptures": {
        "1": {
          "name": "support.function.tagged-template.xml.ttl"
        }
      },
      "end": "`",
      "patterns": [
        {
          "include": "source.js#template-substitution-element"
        },
        {
          "include": "text.xml"
        }
      ]
    }
  ],
  "repository": {
    "nested-css": {
      "name": "meta.embedded.line.css.nested.ttl",
      "begin": "\\b(css)\\s*`",
      "beginCaptures": {
        "1": {
          "name": "support.function.tagged-template.css.ttl"
        }
      },
      "end": "`",
      "patterns": [
        {
          "include": "source.js#template-substitution-element"
        },
        {
          "include": "source.css"
        }
      ]
    },
    "nested-xml": {
      "name": "meta.embedded.line.xml.nested.ttl",
      "begin": "\\b(xml)\\s*`",
      "beginCaptures": {
        "1": {
          "name": "support.function.tagged-template.xml.ttl"
        }
      },
      "end": "`",
      "patterns": [
        {
          "include": "source.js#template-substitution-element"
        },
        {
          "include": "text.xml"
        }
      ]
    }
  }
}
