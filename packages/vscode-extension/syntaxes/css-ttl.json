{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "CSS TTL Injection",
  "scopeName": "source.css.ttl.injection",
  "injectionSelector": "L:source.js, L:source.ts, L:source.jsx, L:source.tsx, L:meta.embedded.block.html, L:text.html.derivative",
  "repository": {},
  "patterns": [
    {
      "name": "meta.tagged-template.css.ttl",
      "begin": "\\b(css)\\s*`",
      "beginCaptures": {
        "1": {
          "name": "support.function.tagged-template.css.ttl"
        },
        "0": {
          "name": "punctuation.definition.template-expression.begin.css.ttl"
        }
      },
      "end": "`",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.template-expression.end.css.ttl"
        }
      },
      "patterns": [
        {
          "include": "source.css.ttl"
        }
      ]
    }
  ]
}