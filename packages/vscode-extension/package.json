{
  "name": "vscode-ttls",
  "displayName": "TTLS",
  "publisher": "alexgagnon",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexgagnon/ttls/packages/vscode-extension"
  },
  "engines": {
    "vscode": "^1.101.0"
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:html"
  ],
  "contributes": {
    "grammars": [
      {
        "scopeName": "source.js.html-ttl",
        "path": "./syntaxes/html-ttl.tmLanguage.json",
        "injectTo": [
          "source.js",
          "source.jsx",
          "source.ts",
          "source.tsx"
        ]
      },
      {
        "scopeName": "text.html.ttls",
        "path": "./syntaxes/html-ttls.tmLanguage.json",
        "injectTo": [
          "text.html.basic"
        ]
      }
    ]
  },
  "keywords": [
    "syntax-highlighting",
    "tagged-template-literals",
    "vscode-extension",
    "css",
    "html",
    "svg",
    "xml"
  ],
  "author": "alexgagnon",
  "license": "ISC",
  "description": "Provides syntax highlighting for tagged template literals from the `ttls` library.",
  "devDependencies": {
    "@types/node": "^24.0.14",
    "@types/vscode": "^1.101.0",
    "ttls": "file:../lib",
    "typescript": "^5.8.3"
  }
}
