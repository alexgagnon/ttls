{
  "name": "vscode-ttls",
  "displayName": "TTLS",
  "publisher": "alexgagnon",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexgagnon/ttls/packages/vscode-extension"
  },
  "engines": {
    "vscode": "^1.101.0"
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "contributes": {
    "languages": [
      {
        "id": "source.css.ttl",
        "aliases": [
          "CSS TTL",
          "css.ttl"
        ],
        "configuration": "./syntaxes/css.json"
      },
      {
        "id": "source.html.ttl",
        "aliases": [
          "HTML TTL",
          "html.ttl"
        ],
        "configuration": "./syntaxes/html.json"
      },
      {
        "id": "source.xml.ttl",
        "aliases": [
          "XML TTL",
          "xml.ttl"
        ],
        "configuration": "./syntaxes/xml.json"
      }
    ],
    "grammars": [
      {
        "scopeName": "source.css.ttl",
        "path": "./syntaxes/css.json"
      },
      {
        "scopeName": "source.html.ttl",
        "path": "./syntaxes/html.json"
      },
      {
        "scopeName": "source.xml.ttl",
        "path": "./syntaxes/xml.json"
      },
      {
        "injectTo": [
          "source.js",
          "source.ts",
          "source.jsx",
          "source.tsx",
          "text.html.basic"
        ],
        "scopeName": "source.css.ttl.injection",
        "path": "./syntaxes/css-ttl.json"
      },
      {
        "injectTo": [
          "source.js",
          "source.ts",
          "source.jsx",
          "source.tsx",
          "text.html.basic"
        ],
        "scopeName": "source.html.ttl.injection",
        "path": "./syntaxes/html-ttl.json"
      },
      {
        "injectTo": [
          "source.js",
          "source.ts",
          "source.jsx",
          "source.tsx",
          "text.html.basic"
        ],
        "scopeName": "source.xml.ttl.injection",
        "path": "./syntaxes/xml-ttl.json"
      }
    ]
  },
  "keywords": [
    "syntax-highlighting",
    "tagged-template-literals",
    "vscode-extension",
    "css",
    "html",
    "svg",
    "xml"
  ],
  "author": "",
  "license": "ISC",
  "description": "Provides syntax highlighting for tagged template literals from the `ttls` library.",
  "devDependencies": {
    "@types/node": "^24.0.14",
    "@types/vscode": "^1.102.0",
    "ttls": "file:../lib",
    "typescript": "^5.8.3"
  }
}
