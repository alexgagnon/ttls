{
  "name": "vscode-ttls",
  "displayName": "ttls",
  "type": "commonjs",
  "private": true,
  "publisher": "alexgagnon",
  "version": "1.1.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexgagnon/ttls/packages/vscode-extension"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:html"
  ],
  "contributes": {
    "grammars": [
      {
        "injectTo": [
          "source.js",
          "source.ts",
          "source.jsx",
          "source.tsx",
          "text.html.cshtml",
          "text.html.derivative",
          "text.html.handlebars"
        ],
        "scopeName": "source.css.ttl",
        "path": "./syntaxes/css-ttl.tmLanguage.json"
      },
      {
        "injectTo": [
          "source.js",
          "source.ts",
          "source.jsx",
          "source.tsx",
          "text.html.cshtml",
          "text.html.derivative",
          "text.html.handlebars"
        ],
        "scopeName": "source.html.ttl",
        "path": "./syntaxes/html-ttl.tmLanguage.json"
      },
      {
        "injectTo": [
          "source.js",
          "source.ts",
          "source.jsx",
          "source.tsx",
          "text.html.cshtml",
          "text.html.derivative",
          "text.html.handlebars"
        ],
        "scopeName": "source.style.ttl",
        "path": "./syntaxes/style-ttl.tmLanguage.json"
      },
      {
        "injectTo": [
          "source.js",
          "source.ts",
          "source.jsx",
          "source.tsx",
          "text.html.cshtml",
          "text.html.derivative",
          "text.html.handlebars"
        ],
        "scopeName": "source.sql.ttl",
        "path": "./syntaxes/sql-ttl.tmLanguage.json"
      },
      {
        "injectTo": [
          "source.js",
          "source.ts",
          "source.jsx",
          "source.tsx",
          "text.html.cshtml",
          "text.html.derivative",
          "text.html.handlebars"
        ],
        "scopeName": "source.xml.ttl",
        "path": "./syntaxes/xml-ttl.tmLanguage.json"
      }
    ]
  },
  "keywords": [
    "syntax-highlighting",
    "tagged-template-literals",
    "vscode-extension",
    "css",
    "html",
    "sql",
    "svg",
    "xml"
  ],
  "author": "alexgagnon",
  "license": "ISC",
  "description": "Provides syntax highlighting for various tagged template literals and comments, such as html`<div></div>`, css`.class {}`, sql`SELECT * FROM table`, or /*html*/`<div></div>`.",
  "devDependencies": {
    "ttls-raw": "file:../raw",
    "@types/node": "^24.0.14",
    "@types/react": "^19.1.8",
    "@types/vscode": "^1.80.0",
    "ttls": "file:../ttls",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "directories": {
    "test": "test"
  }
}
