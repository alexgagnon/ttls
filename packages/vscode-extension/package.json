{
  "name": "vscode-ttls",
  "displayName": "TTLS",
  "publisher": "alexgagnon",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexgagnon/ttls/packages/vscode-extension"
  },
  "engines": {
    "vscode": "^1.101.0"
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:html"
  ],
  "contributes": {
    "grammars": [
      {
        "injectTo": [
          "source.js",
          "source.ts",
          "source.jsx",
          "source.tsx",
          "text.html.cshtml",
          "text.html.derivative",
          "text.html.handlebars"
        ],
        "scopeName": "source.css.ttl",
        "path": "./syntaxes/css-ttl.tmLanguage.json"
      },
      {
        "injectTo": [
          "source.js",
          "source.ts",
          "source.jsx",
          "source.tsx",
          "text.html.cshtml",
          "text.html.derivative",
          "text.html.handlebars"
        ],
        "scopeName": "source.html.ttl",
        "path": "./syntaxes/html-ttl.tmLanguage.json"
      },
      {
        "injectTo": [
          "source.js",
          "source.ts",
          "source.jsx",
          "source.tsx",
          "text.html.cshtml",
          "text.html.derivative",
          "text.html.handlebars"
        ],
        "scopeName": "source.xml.ttl",
        "path": "./syntaxes/xml-ttl.tmLanguage.json"
      }
    ]
  },
  "keywords": [
    "syntax-highlighting",
    "tagged-template-literals",
    "vscode-extension",
    "css",
    "html",
    "svg",
    "xml"
  ],
  "author": "alexgagnon",
  "license": "ISC",
  "description": "Provides syntax highlighting for tagged template literals from the `ttls` library.",
  "devDependencies": {
    "@ttls/raw": "file:../raw",
    "@types/node": "^24.0.14",
    "@types/react": "^19.1.8",
    "@types/vscode": "^1.101.0",
    "ttls": "file:../lib",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
